
<div class="container my-5">
  <div class="row">
    <h2>会員一覧</h2>
  </div>
  <div class="row mt-5">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td>
            <%= customer.last_name %>
            <%= customer.first_name %>
          </td>
          <td><%= customer.email %></td>
          <td></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-4 offset-md-4 py-2 mt-5">
      
    </div>
  </div>
</div> 