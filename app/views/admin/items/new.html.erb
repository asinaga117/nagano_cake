<div class="container">
  <div class="row">
    <h2>商品新規登録</h2>
  </div>
  
  <div class="row align-items-center">
    <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
    <div class="col-md">
      <%= f.label :image, "商品画像" %>
      <%= f.file_field :image, accept: "image/*" %>
    </div>

    <div class="col-md">
      <%= f.label :name, "商品名" %>
      <%= f.text_field :name %>
    </div>

    <div class="col-md">
      <%= f.label :introduction, "商品説明" %>
      <%= f.text_area :introduction %>
    </div>

    <div class="col-md">
      <%= f.label :genre_id, "ジャンル" %>
      <%= f.select :genre_id, [["ケーキ", "1"], ["プリン", "2"]], include_blank: "選択して下さい" %>
    </div>

    <div class="col-md">
      <%= f.label :price, "値段(税抜き)" %>
      <%= f.text_field :price %>円
    </div>

    <div class="col-md">
      <%= f.label :is_active, "販売ステータス" %>
      <%= f.radio_button :is_active, :on_sale, checked: "checked"%>
      <%= f.label :is_active, "販売中" %>
      <%= f.radio_button :is_active, :off_sale %>
      <%= f.label :is_active, "販売停止中" %>
    </div>

    <div class="col-md">
      <%= f.submit "新規登録" %>
    </div>
  </div>
</div>
<% end %>