<%= render "admin/header" %>


<div class="container my-5">
  <div class="row">
    <h2>商品一覧</h2>
  </div>
  
  <div class="col-sm-2 px-sm-0 text-right mt-5">
    <i class="fa-solid fa-circle-plus"></i>
    <%= link_to new_admin_item_path, class: "btn btn btn-outline-secondary" do %>
    <% end %>
  </div>
  
  <div class="row mt-5">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜き価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name, admin_item_path(item) %></td>
          <td><%= item.price %></td>
          <td><%= item.genre.name %></td>
          <td>
            <% if item.is_active %> 販売中
            <% else %>　販売停止
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>