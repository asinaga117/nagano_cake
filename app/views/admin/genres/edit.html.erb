<%= render "admin/header" %>


<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col">
      <h2 class="text-left">ジャンル編集</h2>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-5">
      <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch  do |f| %>
        <div class="form-group row">
          ジャンル名
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="col-md justify-content-around">
          <%= f.submit "変更を保存",class:"btn btn-success my-3 mr-3" %>
        </div>
    </div>
  </div>
</div>
<% end %>
