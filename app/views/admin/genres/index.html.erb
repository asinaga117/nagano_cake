<%= render "admin/header" %>

<div class="container my-5">
  <div class="row">
    <h2>ジャンル一覧・追加</h2>
  </div>

  <%= form_with model: @genre, url: "/admin/genres", method: :post  do |f| %>
  
  <div class="d-flex justify-content-start">
    <div class="p-4">
      <span>ジャンル名</span>
    </div>
    
    <div class="p-4">
      <%= f.text_field :name, autofocus: true, autocomplete: "genre_name" %>
    </div>
      
        <div class="p-4">
          <%= f.submit "新規登録",class: "btn btn-success" %>
        </div>
          <% end %>
      </div>
    </div>
  </div>
  
   <div class="offset-sm-1 col-sm-5">
     <table class="table table-hover text-center">
       <th>
         ジャンル
        </th>
        <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= genre.name %>
            </td>
      
            <td>
              <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %>
            </td>
          </tr>
          <% end %>
      </tbody>
    </table>
  </div>