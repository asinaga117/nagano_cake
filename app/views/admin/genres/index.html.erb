<h2>ジャンル一覧・追加</h2>
<%= form_with model: @genre, url: "/admin/genres", method: :post  do |f| %>


<div>
  <span>ジャンル名</span>
</div>

<div>
  <%= f.text_field :name, autofocus: true, autocomplete: "genre_name" %>
</div>

<div>
  <%= f.submit "新規登録" %>
</div>
<% end %>

<table>
  <th>
    ジャンル
  </th>
  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td>
        <%= genre.name %>
      </td>
      
      <td>
        <%= link_to "編集する", edit_admin_genre_path(genre.id) %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>