<h2>ログイン</h2>

  <h3>会員の方はこちらからログイン</h3>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :"メールアドレス" %><br />
    <%= f.email_field :email,  autocomplete: "email" %>
  </div>
  
  <div class="field">
    <%= f.label :"パスワード" %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<div>
  <h3>会員登録がお済でない方</h3>
  <p><%= link_to "こちら", new_customer_registration_path %>からログインしてください</p>
</div>