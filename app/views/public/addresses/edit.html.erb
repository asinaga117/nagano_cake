<h2>配送先編集</h2>

<%= form_with model: @address, url: public_address_path, method: :patch do |f| %>
  <div>
    <%= f.label :"郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code  %>
  </div>

  <div class="form-group col-xs-12">
    <%= f.label :"住所" %>
    <%= f.text_field :address %>
  </div>

  <div class="form-group col-xs-12">
    <%= f.label :"宛名" %>
    <%= f.text_field :name %>
  </div>
    
  <div class="form-group col-xs-12">
    <%= f.submit '変更内容を保存'  %>
  </div>
<% end %>