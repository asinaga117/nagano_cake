<%= render "public/header" %>

<%= link_to "カートを空にする", public_cart_items_alldestroy_path(@cart_items), method: :delete, data: {confirm: 'カートを空にしてよろしいですか？'} %>

<table>
  <tr>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
  </tr>
  <% @total_payment = 0 %>
  <% @cart_items.each do |i| %>
  <tr>
    <th>
      <%= image_tag i.item.image, size: "50x40" %>
      <%= i.item.name %>
    </th>

    <th><%= i.item.with_tax_price %></th>

    <th>
      <%= form_with model:i, url: public_cart_item_path(i), method: :patch  do |f| %>
        <%= f.number_field :amount, size: 10, min: 1 %>
        <%= f.submit "変更" %>
      <% end %>
    </th>

    <th><%= i.subtotal %></th>
    <% @total_payment += i.subtotal %>

    <th>
      <%= link_to " 削除する", public_cart_item_path(i), method: :delete, remote: true, data: {confirm: "#{i.item.name}を削除してよろしいですか？"} %>
    </th>
  </tr>
 <% end %>
</table>

<table>
  <tr>
    <td>合計金額</td>
    <td><%= @total_payment %></td>
  </tr>
</table>


<%= link_to " 買い物を続ける", public_top_path %>

<%= link_to " 情報入力に進む", new_public_order_path %>

