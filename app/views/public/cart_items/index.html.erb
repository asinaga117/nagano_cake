<table>
  <tr>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
  </tr>
  <% @cart_items.each do |i| %>
  <tr>
    <th>
      <%= image_tag i.item.image, size: "50x40" %>
      <%= i.item.name %>
    </th>
    
    <th><%= i.item.price  %></th>
    
    <th>
      <%= form_with model:i, url: public_cart_item_path(i), method: :patch  do |f| %>
        <%= f.number_field :count, size: 10, min: 1 %>
        <%= f.submit "変更" %>
      <% end %>
    </th>
    
    <th><%= subtotal.i.item.price %></th>
    
  </tr>
 <% end %>
</table>