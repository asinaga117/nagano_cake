<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <table>
    <tbody>
      <tr>
        <th>名前</th>
        <td>(姓)</td>
        <td><%= f.text_field :last_name, autofocus: true %></td>
        <td >(名)</td>
        <td><%= f.text_field :first_name, autofocus: true %></td>
      </tr>

      <tr>
        <th>フリガナ</th>
        <td>(セイ)</td>
        <td><%= f.text_field :last_name_kana, autofocus: true %></td>
        <td>(メイ)</td>
        <td><%= f.text_field :first_name_kana, autofocus: true %></td>
      </tr>

      <tr>
        <th>メールアドレス</th>
        <td></td>
        <td><%= f.email_field :email, autofocus: true%></td>
      </tr>

      <tr>
        <th>郵便番号（ハイフンなし）</th>
        <td></td>
        <td><%= f.text_field :postal_code, autofocus: true %></td>
      </tr>

      <tr>
        <th>住所</th>
        <td></td>
        <td colspan="3"><%= f.text_field :address, autofocus: true, class: "sign-up-address" %></td>
      </tr>

      <tr>
        <th>電話番号（ハイフンなし）</th>
        <td></td>
        <td><%= f.text_field :telephon_number, autofocus: true %></td>
      </tr>

      <tr>
        <th>パスワード（６文字以上）</th>
        <td class="sign-up-small-cell"></td>
        <td><%= f.password_field :password %></td>
      </tr>

      <tr>
        <th>パスワード（確認用）</th>
        <td class="sign-up-small-cell"></td>
        <td><%= f.password_field :password_confirmation %></td>
      </tr>
    </tbody>
  </table>

  <div>
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h3>すでに登録済の方</h3>
<%= link_to "こちら", new_customer_session_path %>からログインしてください。

<%= render "public/shared/error_messages", resource: resource %>