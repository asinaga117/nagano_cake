<%= render "public/header" %>

<strong>注文情報</strong>

<div class="container">
  <div class="row">
    <div class="col">
      <table class="table table-bordered table-condensed">
        <tbody>
          <tr>
            <th>注文日</th>
      	    <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td><%= @order.postal_code %><br>
          	  <%= @order.address %><br>
          	  <%= @order.name %>
            </td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td><%= @order.payment_method %></td>
          </tr>
          <tr>
            <th>ステータス</th>
            <td><%= @order.status %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col">
      <% @total_payment = 0 %>
      <% @order.order_items.each do |order| %>
      <strong>請求情報</strong>
    	<table class="table table-bordered table-condensed">
        <tr>
          <th>商品合計</th>
          <td>
            <%= order.subtotal_order_item %>
          </td>
          <% @total_payment += order.subtotal_order_item %>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= 800 %></td>
        </tr>
        <tr>
          <th>ご請求金額</th>
          <td><%= @total_payment + 800 %>円</td>
        </tr>
      <% end %>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <strong>注文内容</strong>
      <table class="table table-striped table-bordered table-condensed">
      	<thead>
    	    <tr>
    	    	<th>商品</th>
    	      <th>単価(税込)</th>
    	    	<th>個数</th>
    	    	<th>小計</th>
    	    </tr>
      	</thead>
      	<tbody>
      	<% @order_items.each do |order_item| %>
          <tr>
    		    <td><%= order_item.item.name %></td>
    		    <td><%= order_item.item.price %>円</td>
    		    <td><%= order_item.amount %></td>
    		    <td><%= order_item.subtotal_order_item %>円</td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
  

  
  
  

