<strong>注文情報</strong>
  <table>
    <tbody>
      <tr>
        <th>注文日</th>
  	    <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
      <tr>
        <th>配送先</th>
        <td><%= @order.postal_code %><br>
      	  <%= @order.address %><br>
      	  <%= @order.name %>
        </td>
      </tr>
      <tr>
        <th>支払方法</th>
        <td><%= @order.payment_method %></td>
      </tr>
      <tr>
        <th>ステータス</th>
        <td><%= @order.status %></td>
      </tr>
    </tbody>
  </table>

  <% @total_payment = 0 %>
  <% @order.order_items.each do |order| %>
  <strong>請求情報</strong>
	<table>
    <tr>
      <th>商品合計</th>
      <td>
        <%= order.subtotal_order_item %>
      </td>
      <% @total_payment += order.subtotal_order_item %>
    </tr>
    <tr>
      <th>配送料</th>
      <td><%= 800 %></td>
    </tr>
    <tr>
      <th>ご請求金額</th>
      <td><%= @total_payment + 800 %>円</td>
    </tr>
  <% end %>
  </table>

