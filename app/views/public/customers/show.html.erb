<h2>マイページ</h2>

<p>登録者情報</p>
<%= link_to "編集する", edit_public_customers_path %>

<table>
  <tbody>
    <tr>
      <td>氏名</td>
      <td>
        <%= current_customer.last_name %>
        <%= @customer.first_name %>
      </td>
    </tr>

    <tr>
      <td>カナ</td>
      <td>
        <%= @customer.last_name_kana %>
        <%= @customer.first_name_kana %>
      </td>
    </tr>

    <tr>
      <td>郵便番号</td>
      <td><%= @customer.postal_code %></td>
    </tr>

    <tr>
      <td>住所</td>
      <td><%= @customer.address %></td>
    </tr>

    <tr>
      <td>電話番号</td>
      <td><%= @customer.telephon_number %></td>
    </tr>

    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
  </tbody>
</table>

<div>
  <p>配送先</p>
  <p><%= link_to "一覧を見る", public_addresses_path %></p>
</div>

<div>
  <p>注文履歴</p>
  <p><%= link_to "一覧を見る", public_orders_path %></p>
</div>